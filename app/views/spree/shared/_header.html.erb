<div id="header-top">
	<div class="container">

  <div class="row">
	 <div class="col-md-10">
  	<i class="fa fa-phone"></i>
    <% if @add.nil? %>
		  
    <% else %>
      Call us <%= @add.phone %>
    <% end %>
    </div>
   <div class="col-md-2">
    <% if spree_current_user %>
      <% if spree_current_user.has_spree_role?("admin") %>
        <%= link_to "Admin Control", admin_path, class: 'admin_section' %>
      <% end %>
    <% end %>
    </div>
  </div>

	</div>
</div>

